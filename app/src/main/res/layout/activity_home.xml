<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity">
    <androidx.cardview.widget.CardView android:layout_width="0dp"
                                       android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView">
        <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_margin="@dimen/grid_1x"
                                           app:cardCornerRadius="@dimen/standard_corner_radius">
            <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/standard_image" android:layout_height="@dimen/standard_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user"
                    android:onClick="gotoProfileActivity"/>
        </androidx.cardview.widget.CardView>
        <TextView android:id="@+id/titleBar"
                  android:layout_marginLeft="@dimen/standard_image"
                  android:paddingLeft="@dimen/grid_3x"
                  style="@style/heading"
                  android:layout_gravity="center_vertical"
                  android:text="Home"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/searchBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="@dimen/standard_corner_radius"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp">
            <EditText
                    android:id="@+id/etsearch"
                    android:layout_width="@dimen/standard_width"
                    android:layout_height="@dimen/search_height"
                    android:textColorHint="@color/dark_grey"
                    android:background="@color/colorPrimary"
                    android:hint="@string/hint_search"
                    android:paddingLeft="@dimen/grid_2x"
                    android:paddingRight="@dimen/grid_2x"
                    android:textColor="@color/black"
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:drawableEnd="@android:drawable/ic_menu_search"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
            />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tabs" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/feather"
            app:layout_constraintEnd_toEndOf="@+id/viewpager" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/tabs"/>
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_height"
            app:tabIndicator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/grid_2x"

            >
        <com.google.android.material.tabs.TabItem
                android:id="@+id/tabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/selector_home"
        />
        <com.google.android.material.tabs.TabItem
                android:id="@+id/tabSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/selector_search"
        />
        <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/selector_profile"
        />
    </com.google.android.material.tabs.TabLayout>
    <LinearLayout
            android:id="@+id/linear_pb_container_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/transparent_grey"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:elevation="5dp"
            android:visibility="gone">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>