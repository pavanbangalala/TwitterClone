<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
android:id="@+id/tweet_layout">

    <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/grid_2x"
            android:text="@string/user_name"/>
    <TextView
            android:id="@+id/tvTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            android:layout_marginTop="@dimen/grid_2x"
            android:textSize="@dimen/standard_text_size"
            android:text="tweet text"
    />
    <ImageView
            android:id="@+id/imvTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTweet"
            android:layout_marginTop="@dimen/grid_2x"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
    />
    <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imvTweet"
            android:layout_marginTop="@dimen/grid_2x"
            android:text="Date"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            android:layout_marginTop="@dimen/grid_2x"
            android:orientation="horizontal"
            android:gravity="center">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
        >
            <ImageView
                    android:id="@+id/imvTweetLike"
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:src="@drawable/like_inactive"
                    android:padding="@dimen/grid_1x"
                    android:background="@null"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:id="@+id/tvTweetLikeCount"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/grid_2x"
                      android:textSize="@dimen/standart_text_size"
                      android:text="0"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
        >
            <ImageView
                    android:id="@+id/imvTweetRetweet"
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:src="@drawable/retweet_inactive"
                    android:padding="@dimen/grid_1x"
                    android:background="@null"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:id="@+id/tvTweetRetweetCount"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/grid_2x"
                      android:textSize="@dimen/standart_text_size"
                      android:text="0"
            />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>